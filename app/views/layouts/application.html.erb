<!DOCTYPE html>
<html>
  <head>
    <title>LifePawtners</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Roboto:100,300,400"' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <header class="nav-bar" >
      <%= link_to "Life Pawtners", root_path, class: 'main-link' %>
      <% if current_user %>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: 'alternate-link' %>
        <%= link_to "Favorites", favorites_path, class: 'alternate-link' %>
        <%= link_to "Account", edit_user_registration_path, class: 'alternate-link' %>
      <% else %>
        <%= link_to "Log In", new_user_session_path, class: 'alternate-link' %>
        <%= link_to "Create an Account", new_user_registration_path, class: 'alternate-link' %>
      <% end %>
    </header>
    <section>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </section>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
