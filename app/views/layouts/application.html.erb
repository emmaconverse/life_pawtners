<!DOCTYPE html>
<html>
  <head>
    <title>LifePawtners</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Roboto:100,300,400"' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
    <%#= javascript_include_tag 'application', "https://maps.google.com/maps/api/js?key=#{ENV['GOOGLE_API_KEY']}" %>
    <%#= javascript_include_tag 'application',  "https://cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js" %>
    <%#= javascript_include_tag 'application',  'https://cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' %>
  </head>

  <body>
    <header class="nav-bar" >
      <%= link_to(image_tag("pawprint.png", class: "icon-logo"), root_path) %>
      <% if current_user %>
      <!-- <= link_to "Favorites" if current_user.signed_in? %> -->
        <%= link_to "Account", edit_user_registration_path %>
      <% else %>
        <%= link_to "Log In", new_user_session_path %>
        <%= link_to "Create an Account", new_user_registration_path %>
      <% end %>
    </header>
    <section>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </section>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
